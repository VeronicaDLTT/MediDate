@model IEnumerable<MediDate.Models.DetServicio>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{

    <!--Servicio registrado exitosamente-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["SuccessMessage"]', 'success');
        }
    </script>
}

<partial name="_MenuMedicos" />

    <h1>Servicios</h1>

    <p>
        <a class="btn btn-primary" asp-controller="DetServicio" asp-action="Create">Agregar</a>
    </p>

    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Servicio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Servicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Costo)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        }else{
            <div class="card text-center">
                <div class="card-body">
                    <p class="card-text">No cuenta con servicios registrados.</p>
                </div>
            </div>
        }
    </div>

        </div> @*Fin Col de _MenuMedicos.cshtml*@
    </div> @* Fin Row de _MenuMedicos.cshtml*@
</div> @*Fin Container de _MenuMedicos.cshtml*@
