@model IEnumerable<MediDate.Models.DetServicio>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{

    <!--Servicio registrado exitosamente-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["SuccessMessage"]', 'success');
        }
    </script>
}

@if (TempData["AlertMessage"] != null)
{

    <!--Servicio registrado exitosamente-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["AlertMessage"]', 'info');
        }
    </script>
}

<partial name="_MenuMedicos" />

<div class="container">

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <h1>Servicios</h1>
        </div>
    </div>

    <p style="text-align: right;">
        <a style="width:120px" class="btn btn-primary" asp-controller="DetServicio" asp-action="Create">Agregar</a>
    </p>

    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Servicio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Servicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Costo)
                            </td>
                            <td>
                            @Html.ActionLink("Editar", "Edit", new { IdDetServicio = item.IdDetServicio }, new{@class="nav-link text-white btn btn-primary", @style="width:120px; display: inline-block; margin-right: 10px;"})
                            @Html.ActionLink("Eliminar", "Delete", new { IdDetServicio = item.IdDetServicio }, new{@class="nav-link text-white btn btn-danger", @style="width:120px; display: inline-block;"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }else{
            <div class="card text-center">
                <div class="card-body">
                    <p class="card-text">No cuenta con servicios registrados.</p>
                </div>
            </div>
        }
    </div>
</div>

        </div> @*Fin Col de _MenuMedicos.cshtml*@
    </div> @* Fin Row de _MenuMedicos.cshtml*@
</div> @*Fin Container de _MenuMedicos.cshtml*@
