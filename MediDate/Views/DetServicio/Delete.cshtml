@model MediDate.Models.DetServicio

@{
    ViewData["Title"] = "Delete";
}

<partial name="_MenuMedicos" />

<div class="row justify-content-center">
    <div class="col-md-auto align-self-center">
        <h1>Eliminar Servicio</h1>
    </div>
</div>

<div><label></label></div>

<div class="row justify-content-center">
    <div class="col-md-auto align-self-center">

        <div class="card" style="width: 35rem;">
            <div class="card-body">
                <div>
                    <dl class="row">
                        
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Servicio)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Servicio)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Costo)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Costo)
                        </dd>
                    </dl>
                </div>

                <div class="row justify-content-end">
                    <div class="col-md-auto">
                        <a class="nav-link text-black" asp-action="Index" asp-controller="DetServicio">Regresar</a>
                    </div>
                    <div class="col-md-auto">
                        <input type="submit" value="Eliminar" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#eliminarModal" />

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar servicio</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Desea eliminar el servicio definitivamente?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <form asp-action="DeleteConfirmed">
                    <input asp-for="IdDetServicio" type="hidden"/>
                    <input type="submit" value="Eliminar" class="btn btn-danger"/>
                </form>
            </div>
        </div>
    </div>
</div>
