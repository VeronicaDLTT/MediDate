@model IEnumerable<MediDate.Models.Medico>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div><label></label></div>

<div class="container" >
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-9">
            <input type="text" class="form-control" id="floatingInputGroup1" placeholder="Especialidad, Servicio, Nombre">
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</div>

<div><label></label></div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nombre Completo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumCedula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCedula)
            </td>
        </tr>
}
    </tbody>
</table>
